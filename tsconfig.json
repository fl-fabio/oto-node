{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mongoose"],
    "lib" : ["ES2022"]
  },
  "include": [
    "src/**/*", ".env"
  ],
  "exclude": ["node_modules", "dist"]
}
